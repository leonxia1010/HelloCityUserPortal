#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "Checking commit message format..."

commit_msg_file=$1
commit_msg=$(cat "$commit_msg_file")

pattern='^(feat|fix|chore|tools|test|docs|refactor|style|perf|ci|build|revert)\([a-z]+\) : \[SCRUM-[0-9]+\] .+'

if ! echo "$commit_msg" | grep -Eq "$pattern"; then
  echo ""
  echo "âŒ wrong format, please follow the commit message guideline."
  echo ""
  echo "âœ… Correct format should be:"
  echo "   feat(frontend) : [SCRUM-69] description"
  echo ""
  echo "ğŸ“ Example:"
  echo "   fix(auth) : [SCRUM-101] fix token expiration issue"
  echo ""
  echo "ğŸ’¡ Supported types: feat, fix, chore, tools, test, docs, refactor, style, perf, ci, build, revert"
  echo ""
  exit 1
fi

echo "âœ… Commit message format is valid."
